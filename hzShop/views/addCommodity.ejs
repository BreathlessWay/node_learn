<%- include('header') %>

<article class="container">
	<% if (success) {%>
		<div class="alert alert-success" role="alert">		  
			<%= success %>
		</div>
	<%}%>
	<% if (error) {%>
		<div class="alert alert-danger" role="alert">	  
			<%= error %>
		</div>
	<%}%>
	<header class="row">
		<aside class="col nav-link">
		  欢迎光临，亲爱的 
		  <a href="">
		  	<%= user %>
		  </a>
		</aside>	
		<nav class="nav  float-right">
		  <a class="nav-link" href="#">购物车</a>
		  <a class="nav-link" href="/logout">退出</a>	
		</nav>
	</header>

	<nav aria-label="breadcrumb" role="navigation">
	  <ol class="breadcrumb">
	    <li class="breadcrumb-item"><a href="/">主页</a></li>
	    <li class="breadcrumb-item active" aria-current="page">添加商品</li>
	  </ol>
	</nav>

	<form style="width: 600px;margin: auto" method="post" action="/register">
	  <div class="form-group">
	    <label for="name">商品名称：</label>
	    <input type="text" class="form-control" id="name" placeholder="商品名称" name="name" aria-describedby="name-info">
	    <small id="name-info" class="form-text text-muted">商品名称只能为为6-12位的英文汉字数字</small>
	  </div>
	 <div class="form-group">
	    <label for="price">商品价格：</label>
	    <input type="price" class="form-control" id="price" placeholder="0.00" name="price" aria-describedby="price-info">
	    <small id="price-info" class="form-text text-muted">商品价格只能为数字0.00</small>
	  </div>
	  <div class="form-group">
	  <div class="form-group">
	    <label for="imgSrc">商品图片：</label>
	    <input type="file" class="form-control-file" id="imgSrc" name="imgSrc" aria-describedby="imgSrc-info">
	    <small id="imgSrc-info" class="form-text text-muted">商品图片只能为小于1M得jpg，png，jpeg图片</small>
	  </div>
	  <div class="text-right">
		<button type="submit" class="btn btn-primary">注册</button>
		&nbsp;
		<a href="/" class="btn  btn-outline-primary">返回</a>
	  </div>
	</form>
</article>

<%- include('footer') %>