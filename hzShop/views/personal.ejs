<%- include('header') %>
<article class="container">
    <% if (success) {%>
    <div class="alert alert-success" role="alert">
        <%= success %>
    </div>
    <%}%>
    <% if (error) {%>
    <div class="alert alert-danger" role="alert">
        <%= error %>
    </div>
    <%}%>
    <header class="row">
        <aside class="col nav-link">
            欢迎光临，亲爱的
            <a href="/personal">
                <%= user %>
            </a>
        </aside>
        <nav class="nav  float-right">
            <a class="nav-link active" href="/addCommodity">添加商品</a>
            <a class="nav-link" href="/carts">购物车</a>
            <a class="nav-link" href="/logout">退出</a>
        </nav>
    </header>
    <div class="clearfix"></div>

    <nav aria-label="breadcrumb" role="navigation">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">主页</a></li>
            <li class="breadcrumb-item active" aria-current="page">个人中心</li>
        </ol>
    </nav>

    <dl class="row">
        <dt class="col-sm-1 mb-3">设置</dt>
        <dd class="col-sm-11 mb-3">
            <a href="/reset" title="">重置密码</a>
        </dd>

        <dt class="col-sm-1 mb-3">已购商品</dt>
        <dd class="col-sm-11 mb-3">
            <ul class="m-0 p-0 row">
                <% accounted.forEach(function(list){%>
                <li class="col-sm-3 pl-0 mb-4">
                    <div class="card">
                        <% if( list.cImgSrc ) {%>
                        <img class="card-img-top" src="<%= list.cImgSrc%>" alt=<%= list.cName %> >
                        <% } else {%>
                        <img class="card-img-top" src="/img/default.png" alt=<%= list.cName %> >
                        <% } %>
                        <div class="card-body">
                            <h4 class="card-title text-truncate"><%= list.cName%></h4>
                            <p class="card-text text-truncate"><%= list.cDesc || list.cName %></p>
                            <span class="text-danger h4">$ <%= list.cPrice %></span>
                        </div>
                    </div>
                </li>
                <% }) %>
            </ul>
            <% if(!accounted||accounted.length === 0) {%>
            <p class="text-info mb-0">还没有买过东西哦，<a href="/">快去买点什么吧</a></p>
            <% } %>
        </dd>

        <dt class="col-sm-1 mb-3">待付款</dt>
        <dd class="col-sm-11 mb-3">
            <ul class="m-0 p-0 row">
                <% accounting.forEach(function(list){%>
                <li class="col-sm-3 pl-0 mb-4">
                    <div class="card">
                        <% if( list.cImgSrc ) {%>
                        <img class="card-img-top" src="<%= list.cImgSrc%>" alt=<%= list.cName %> >
                        <% } else {%>
                        <img class="card-img-top" src="/img/default.png" alt=<%= list.cName %> >
                        <% } %>
                        <div class="card-body">
                            <h4 class="card-title text-truncate"><%= list.cName%></h4>
                            <p class="card-text text-truncate"><%= list.cDesc || list.cName %></p>
                            <span class="text-danger h4">$ <%= list.cPrice %></span>
                        </div>
                    </div>
                </li>
                <% }) %>
            </ul>
            <% if(accounting && accounting.length>0) {%>
            <div class="text-right mt-3">
                <a href="/carts" title="" class="btn btn-outline-primary">去结算</a>
            </div>
            <% }else{ %>
            <p class="text-info">购物车里没有商品哦，<a href="/">快去买点什么吧</a></p>
            <% } %>
        </dd>
    </dl>

</article>

<%- include('footer') %>