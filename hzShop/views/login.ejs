<%- include('header') %>
<article class="container MT50">
	<nav aria-label="breadcrumb" role="navigation">
			  <ol class="breadcrumb">
			    <li class="breadcrumb-item"><a href="/">主页</a></li>
			    <li class="breadcrumb-item active" aria-current="page">登陆</li>
			  </ol>
	</nav>
	<h5 class="text-info text-center">快登陆看看</h5>
	<% if (error) {%>
		<div class="alert alert-danger" role="alert">
			<%= error %>
		</div>
	<%}%>
	<form style="width: 300px;margin: auto" method="post" action="/login">
	  <div class="form-group">
	    <label for="user">用户名：</label>
	    <input type="text" class="form-control" id="user" placeholder="用户名" name="user" aria-describedby="user-info">
	    <small id="user-info" class="form-text text-muted">用户名不能为除英文汉字数字以外的字符</small>
	  </div>
	 <div class="form-group">
	    <label for="password">密码：</label>
	    <input type="password" class="form-control" id="password" placeholder="密码" name="password">
	  </div>
	  <div class="text-right">
		<button type="submit" class="btn btn-primary">登陆</button>
		&nbsp;
		<a href="/" class="btn  btn-outline-primary">返回</a>
	  </div>
	</form>
</article>
<%- include('footer') %>