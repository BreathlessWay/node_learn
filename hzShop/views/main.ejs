<%- include('header') %>
<article class="container">
	<% if (success) {%>
		<div class="alert alert-success" role="alert">		  
			<%= success %>
		</div>
	<%}%>
	<% if (error) {%>
		<div class="alert alert-danger" role="alert">	  
			<%= error %>
		</div>
	<%}%>
	<% if (user) {%>
	<aside>
		欢迎光临，亲爱的 <%= user %>
		<a href="/logout">退出</a>	
		</aside>	
	<%} else {%>
	<aside class="float-right">
		<a href="/login">登陆</a>
		<a href="/register">注册</a>	
		</aside>	
	<% } %>
</article>
<%- include('footer') %>