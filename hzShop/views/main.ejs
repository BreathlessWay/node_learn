<%- include('header') %>
<article class="container">
	<% if (success) {%>
		<div class="alert alert-success" role="alert">		  
			<%= success %>
		</div>
	<%}%>
	<% if (error) {%>
		<div class="alert alert-danger" role="alert">	  
			<%= error %>
		</div>
	<%}%>
	<% if (user) {%>
	<header class="row">
		<aside class="col nav-link">
		  欢迎光临，亲爱的 
		  <a href="">
		  	<%= user %>
		  </a>
		</aside>	
		<nav class="nav  float-right">
		  <a class="nav-link active" href="/addCommodity">添加商品</a>
		  <a class="nav-link" href="#">购物车</a>
		  <a class="nav-link" href="/logout">退出</a>	
		</nav>
	</header>
	<%} else {%>
	<aside class="float-right">
		<a href="/login">登陆</a>
		<a href="/register">注册</a>	
		</aside>	
	<% } %>
	<div class="clearfix"></div>

	<nav aria-label="breadcrumb" role="navigation">
	  <ol class="breadcrumb">
	    <li class="breadcrumb-item active" aria-current="page">主页</li>
	  </ol>
	</nav>

	<section class="row">
		<% commodityList.forEach(function(list,index){ %>
		<div class="col-md-3" data-key="<%= index %>">
			<div class="card">
				<img class="card-img-top" src="<%= list.imgSrc%>" alt="<%= list.name %>"  />
				<div class="card-body">
					<h4 class="card-title"><%= list.name %></h4>
					<p class="card-text"><%= list.desc %></p>
					<a href="#" class="btn btn-primary">
						<span class="badge badge-danger">￥<%= list.price %></span>
						加入购物车
					</a>
				</div>
			</div>
		</div>
		<% }) %>
	</section>
</article>
<%- include('footer') %>