<%- include('header') %>
<article class="container mt-5">
    <nav aria-label="breadcrumb" role="navigation">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">主页</a></li>
            <li class="breadcrumb-item active" aria-current="page"><%= title%></li>
        </ol>
    </nav>
    <h5 class="text-info text-center"><%= title%></h5>
    <% if (success) {%>
    <div class="alert alert-success" role="alert">
        <%= success %>
    </div>
    <%}%>
    <% if (error) {%>
    <div class="alert alert-danger" role="alert">
        <%= error %>
    </div>
    <%}%>
    <form class="mx-auto col-sm-4" method="post">
        <div class="form-group">
            <label for="user">用户名：</label>
            <input type="text" class="form-control" id="user" placeholder="用户名" name="user" aria-describedby="user-info">
            <small id="user-info" class="form-text text-muted">用户名只能为为6-12位的英文汉字数字</small>
        </div>
        <div class="form-group">
            <label for="password">密码：</label>
            <input type="password" class="form-control" id="password" placeholder="密码" name="password" aria-describedby="password-info">
            <small id="password-info" class="form-text text-muted">密码只能为6-12位的数字字母下划线</small>
        </div>
        <div class="form-group">
            <label for="password_repeat">重复密码：</label>
            <input type="password" class="form-control" id="password_repeat" placeholder="重复密码" name="password_repeat" aria-describedby="password-repeat-info">
            <small id="password-repeat-info" class="form-text text-muted">两次密码输入需保持一致</small>
        </div>
        <div class="text-right">
            <button type="submit" class="btn btn-primary"><%= title %></button> &nbsp; <a href="/" class="btn  btn-outline-primary">返回</a>
        </div>
    </form>
</article><%- include('footer') %>