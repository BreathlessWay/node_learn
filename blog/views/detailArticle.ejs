<%- include('header') %>

<article class="posts-article-detail">
    <header>
        <h3 class="text-center">Article Detail</h3>
        <aside class="posts-nav">
            <span class="glyphicon glyphicon-align-justify" data-toggle="dropdown" style="cursor: pointer"></span>
            <% if(!user) { %>
            <ul class="dropdown-menu">
                <li><a href="/signin">登录</a></li>
                <li><a href="/signup">注册</a></li>
            </ul>
            <% } else { %>
            <ul class="dropdown-menu">
                <li><a href="/signin">个人中心</a></li>
                <li role="separator" class="divider"></li>
                <li style="margin-bottom: 3px"><a href="/posts/create">发表文章</a></li>
                <li><a href="/signout">退出</a></li>
            </ul>
            <% } %>
        </aside>
    </header>
    <br>
    <section class="posts-article-detail_wrap">

        <% if(success) { %>
        <div class="alert alert-success" role="alert"><%= success %></div>
        <% } %>
        <% if(error) { %>
        <div class="alert alert-danger" role="alert"><%= error %></div>
        <% } %>

        <article class="posts-article-detail-content">
            <h4 class="posts-article-list_title"><%= content.title %></h4>
            <section class="posts-article-list_content">
                <%= content.desc %>
            </section>
            <aside class="posts-article-list_aside">
                <span>
                    <%= content.author %>
                    &nbsp;&nbsp;
                    发布于：<%= content.date %>
                </span>
                <div class="posts-article-detail_aside_right">
                    浏览(<%= content.read %>) 回复(<%= content.apply %>)
                    <% if(!user) { %>
                    <aside class="dropdown">
                        <span class="glyphicon glyphicon-menu-down" data-toggle="dropdown"
                              style="cursor: pointer"></span>
                        <ul class="dropdown-menu">
                            <li><a href="/edit/<%= content._id %>">编辑</a></li>
                            <li><a href="#" class="delete-article">删除</a></li>
                        </ul>
                    </aside>
                    <% } %>
                </div>
            </aside>
        </article>
        <article class="posts-article-detail-comment">
            <h4 class="posts-article-detail-comment_title">留言</h4>
            <hr>
            <% if (comment.length === 0) { %>
            <p class="text-center">暂无评论</p>
            <% } else {%>
            <ul class="posts-article-detail-comment_list">
                <% for (var i = 0,len = comment.length;i < len;i++) { %>
                <li class="media posts-article-detail-comment_item">
                    <div class="media-left">
                        <img class="media-object" src="<%= comment[i].avater || '/img/avater.jpg' %>" alt="头像"
                             width="64" height="64">
                    </div>
                    <div class="media-body">
                        <% if (user) { %>
                        <span class="glyphicon glyphicon-remove delete-comment"
                              data-uuid="<%= comment[i]._id %>"></span>
                        <% } %>
                        <h4 class="media-heading">
                            <%= comment[i].name %>
                            <i class="posts-article-detail-comment_item_date">
                                <%= comment[i].date %>
                            </i>
                        </h4>
                        <%= comment[i].detail %>
                    </div>
                </li>
                <% } %>
            </ul>
            <% } %>
            <% if (!user) { %>
            <form method="post" action="/posts/<%= content._id %>/comment">
                <div class="form-group">
                    <label for="self"></label>
                    <textarea class="form-control" rows="3" id="self" name="self"></textarea>
                </div>
                <input type="submit" class="btn btn-primary btn-block" value="发表留言">
            </form>
            <% } %>
        </article>
    </section>
</article>

<%- include('footer') %>