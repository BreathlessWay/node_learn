<%- include('header') %>

<article class="posts-article-detail">
    <header>
        <h3 class="text-center">Article Detail</h3>
        <aside class="posts-nav">
            <span class="glyphicon glyphicon-align-justify" data-toggle="dropdown" style="cursor: pointer"></span>
            <% if(!user) { %>
            <ul class="dropdown-menu">
                <li><a href="/signin">登录</a></li>
                <li><a href="/signup">注册</a></li>
            </ul>
            <% } else { %>
            <ul class="dropdown-menu">
                <li><a href="/signin">个人中心</a></li>
                <li role="separator" class="divider"></li>
                <li style="margin-bottom: 3px"><a href="/posts/create">发表文章</a></li>
                <li><a href="/signout">退出</a></li>
            </ul>
            <% } %>
        </aside>
    </header>
    <br>
    <section class="posts-article-detail_wrap">
        <article class="posts-article-detail-content">
            <h4 class="posts-article-list_title"><%= content.title %></h4>
            <section class="posts-article-list_content">
                <%= content.desc %>
            </section>
            <aside class="posts-article-list_aside">
                        <span>
                            <%= content.author %>
                            &nbsp;&nbsp;
                            发布于：<%= content.date %>
                        </span>
                <span>
                        浏览(<%= content.read %>) 回复(<%= content.apply %>)
                    </span>
            </aside>
        </article>
    </section>
</article>

<%- include('footer') %>