<%- include('header') %>
<section class="row">
    <form class="col-6 mx-auto" method="post">
        <div class="form-group">
            <label for="username">用户名：</label>
            <input type="text" class="form-control" id="username" name="username" placeholder="用户名">
        </div>
        <div class="form-group">
            <label for="password">密码：</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="密码">
        </div>
        <div class="form-group">
            <label for="password_repeat">重复密码：</label>
            <input type="password" class="form-control" id="password_repeat" aria-describedby="password_repeat" name="password_repeat" placeholder="重复密码">
            <small id="password_repeat" class="form-text text-muted">两次输入密码需一致</small>
        </div>
        <div class="form-group">
            <label for="sex">性别：</label>
            <select class="form-control" id="sex" name="sex">
                <option>男</option>
                <option>女</option>
            </select>
        </div>
        <div class="form-group">
            <label for="avatar">头像：</label>
            <input type="file" class="form-control-file" id="avatar" name="avatar" accept="image/jpeg,image/gif,image/png" aria-describedby="avatar">
            <small id="avatar" class="form-text text-muted">只能上传2M以下的 jpg,jpeg,gif,png 图片</small>
        </div>
        <div class="form-group">
            <label for="intro">个人介绍：</label>
            <textarea class="form-control" id="intro" rows="3" name="intro" placeholder="个人简介"></textarea>
        </div>
        <button type="submit" class="btn btn-primary btn-block mt-5">注册</button>
    </form>
</section>
<%- include('footer') %>